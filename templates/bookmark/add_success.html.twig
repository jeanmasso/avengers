{# Template : Confirmation de l'ajout d'un marque-page #}

{% extends 'base.html.twig' %}

{% block title %}Marque-page ajouté avec succès{% endblock %}

{% block body %}

    {# === MESSAGE DE SUCCÈS === #}
    <div class="container text-center my-5">
        <div class="alert alert-success" role="alert">
            <h2 class="alert-heading">✅ Succès !</h2>
            <p class="fs-5">Le marque-page a été ajouté avec succès dans la base de données.</p>
        </div>

        {# === BOUTONS D'ACTION === #}
        <div class="mt-4">
            <a href="{{ path('bookmark_ajout') }}" class="btn btn-primary me-2" data-turbo="false">Ajouter un autre marque-page</a>
            <a href="{{ path('bookmark_index') }}" class="btn btn-secondary" data-turbo="false">Retour à la liste des marque-pages</a>
        </div>
    </div>

{% endblock %}
