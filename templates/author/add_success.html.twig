{# Template : Confirmation de l'ajout d'un auteur #}

{% extends 'base.html.twig' %}

{% block title %}Auteur ajouté avec succès{% endblock %}

{% block body %}

    {# === MESSAGE DE SUCCÈS === #}
    <div class="container text-center my-5">
        <div class="alert alert-success" role="alert">
            <h2 class="alert-heading">✅ Succès !</h2>
            <p class="fs-5">L'auteur a été ajouté avec succès dans la base de données.</p>
        </div>

        {# === BOUTONS D'ACTION === #}
        <div class="mt-4">
            <a href="{{ path('author_ajout') }}" class="btn btn-primary me-2" data-turbo="false">Ajouter un autre auteur</a>
            <a href="{{ path('author_index') }}" class="btn btn-secondary" data-turbo="false">Retour à la liste des auteurs</a>
        </div>
    </div>

{% endblock %}
