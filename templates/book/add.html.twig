{# Template : Formulaire d'ajout de livre #}

{% extends 'base.html.twig' %}

{% block title %}Ajouter un livre{% endblock %}

{% block body %}

    {# === TITRE DE LA PAGE === #}
    <h2 class="text-center text-danger my-3">Ajouter un nouveau livre</h2>

    {# === BOUTON RETOUR === #}
    <div class="text-center my-3">
        <a href="{{ path('book_index') }}" class="btn btn-primary" data-turbo="false">← Retour à la liste</a>
    </div>

    {# === FORMULAIRE D'AJOUT === #}
    <div class="d-flex justify-content-center">
        <div class="w-50">
            {{ form_start(mon_formulaire) }}
                <div class="mb-3">
                    {{ form_label(mon_formulaire.title) }}
                    {{ form_widget(mon_formulaire.title, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(mon_formulaire.title) }}
                </div>

                <div class="mb-3">
                    {{ form_label(mon_formulaire.year) }}
                    {{ form_widget(mon_formulaire.year, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(mon_formulaire.year) }}
                </div>

                <div class="mb-3">
                    {{ form_label(mon_formulaire.author) }}
                    {{ form_widget(mon_formulaire.author, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(mon_formulaire.author) }}
                </div>

                <div class="text-center">
                    {{ form_widget(mon_formulaire.valider, {'attr': {'class': 'btn btn-success'}}) }}
                </div>
            {{ form_end(mon_formulaire) }}
        </div>
    </div>

{% endblock %}
