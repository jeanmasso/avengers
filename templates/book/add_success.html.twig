{# Template : Confirmation de l'ajout d'un livre #}

{% extends 'base.html.twig' %}

{% block title %}Livre ajouté avec succès{% endblock %}

{% block body %}

    {# === MESSAGE DE SUCCÈS === #}
    <div class="container text-center my-5">
        <div class="alert alert-success" role="alert">
            <h2 class="alert-heading">✅ Succès !</h2>
            <p class="fs-5">Le livre a été ajouté avec succès dans la base de données.</p>
        </div>

        {# === BOUTONS D'ACTION === #}
        <div class="mt-4">
            <a href="{{ path('book_ajout') }}" class="btn btn-primary me-2" data-turbo="false">Ajouter un autre livre</a>
            <a href="{{ path('book_index') }}" class="btn btn-secondary" data-turbo="false">Retour à la liste des livres</a>
        </div>
    </div>

{% endblock %}
