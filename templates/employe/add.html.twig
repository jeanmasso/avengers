{# Template : Formulaire d'ajout d'employé avec adresse imbriquée #}

{% extends 'base.html.twig' %}

{% block title %}Ajouter un employé{% endblock %}

{% block body %}

    {# === TITRE DE LA PAGE === #}
    <h2 class="text-center text-danger my-3">Ajouter un nouvel employé</h2>

    {# === MESSAGES FLASH === #}
    {% for message in app.flashes('success') %}
        <div class="alert alert-success text-center">
            {{ message }}
        </div>
    {% endfor %}

    {# === FORMULAIRE D'AJOUT === #}
    <div class="d-flex justify-content-center">
        <div class="w-50">
            {{ form_start(mon_formulaire) }}
                <div class="mb-3">
                    {{ form_label(mon_formulaire.firstname) }}
                    {{ form_widget(mon_formulaire.firstname, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(mon_formulaire.firstname) }}
                </div>

                <div class="mb-3">
                    {{ form_label(mon_formulaire.lastname) }}
                    {{ form_widget(mon_formulaire.lastname, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(mon_formulaire.lastname) }}
                </div>

                <fieldset class="border p-3 mb-3">
                    <legend class="w-auto px-2">Adresse</legend>
                    
                    <div class="mb-3">
                        {{ form_label(mon_formulaire.adresse.city) }}
                        {{ form_widget(mon_formulaire.adresse.city, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(mon_formulaire.adresse.city) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(mon_formulaire.adresse.country) }}
                        {{ form_widget(mon_formulaire.adresse.country, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(mon_formulaire.adresse.country) }}
                    </div>
                </fieldset>

                <div class="text-center">
                    {{ form_widget(mon_formulaire.valider, {'attr': {'class': 'btn btn-success'}}) }}
                </div>
            {{ form_end(mon_formulaire) }}
        </div>
    </div>

{% endblock %}
